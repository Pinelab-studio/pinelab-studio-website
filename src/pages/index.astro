---
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout>
  <section>
    <div
      class="mx-auto max-w-7xl lg:px-16 md:px-12 px-8 xl:px-24 mt-24 z-50 items-center"
    >
      <div class="lg:pr-24 md:pr-12 pb-12 lg:pb-0 max-w-xl">
        <span class="text-sm uppercase font-medium tracking-wide text-blue-600"
          >MAKE THE WORLD A BETTER PLACE</span
        >
        <h2
          class="text-purple-900 font-semibold mt-6 text-4xl lg:text-7xl tracking-tight"
        >
          Your Vendure Implementation Studio
        </h2>
        <p class="text-slate-500 mt-5 lg:text-balance">
          We help you build and run your online store with Vendure. Our aim is
          to create an ecosystem that lasts and a community that grows.
        </p>
      </div>
    </div>

    <section>
      <div
        class="h-64 justify-center lg:px-0 max-h-full md:px-12 overflow-hidden relativ -skew-y-[16deg] transform mb-24"
      >
        <div class="bg-white block lg:flex-1 lg:relative sm:contents">
          <div class="bg-white absolute h-full inset-0 object-cover w-full">
            <video
              autoplay=""
              class="bg-white absolute max-w-none min-h-full min-w-full w-auto z-10"
              loop=""
              muted=""
              ><source src="/images/gradientB.mp4" type="video/mp4" />Your
              browser does not support the video tag.</video
            >
          </div>
        </div>
      </div>
    </section>
  </section>
  <section id="contact">
    <div class="mx-auto max-w-7xl lg:px-16 md:px-12 px-8 xl:px-24 py-24 mb-12">
      <div class="mx-auto text-center">
        <h1
          class="text-purple-900 font-semibold mt-6 text-4xl lg:text-6xl tracking-tight"
        >
          Under construction
        </h1>
        <div class="mx-auto max-w-xl lg:mt-8">
          <p class="text-slate-500">
            Get in touch with us to learn more about our services
          </p>
        </div>
        <form
          action="https://formspree.io/f/xdopwkwl"
          method="POST"
          class="mt-8 sm:flex max-w-xl mx-auto"
          aria-label="Email Subscription Form"
        >
          <label for="email-address" class="sr-only">Email address</label>
          <input
            id="email-address"
            name="email"
            type="email"
            autocomplete="email"
            required
            class="w-full focus:outline-none border focus:border-slate-200 py-3 appearance-none block border-transparent focus:bg-white bg-slate-50 px-3 rounded-xl text-purple-900"
            placeholder="Enter your email"
            aria-label="Enter your email address"
          />
          <div class="mt-3 rounded-md sm:mt-0 sm:ml-3 sm:flex-shrink-0">
            <button
              type="submit"
              class="text-white items-center font-medium gap-3 inline-flex focus-visible:outline-2 focus-visible:outline-offset-2 focus:outline-none justify-center px-6 lg:px-8 ring-2 ring-transparent focus:ring-offset-2 focus:ring-blue-500 duration-200 py-3.5 rounded-full active:bg-blue-800 active:text-white bg-blue-500 hover:bg-blue-600 w-auto"
            >
              Get in touch
            </button>
          </div>
        </form>
      </div>
    </div>
  </section>
</BaseLayout>
